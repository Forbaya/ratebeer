<h2>List of ratings</h2>

<p>Number of ratings <%= @ratings.count %></p>

<table class="table">
  <thead>
    <tr>
      <th>Beer</th>
      <th>Score</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ratings.each do |rating| %>
      <tr>
	<td><%= link_to rating.beer.name, rating.beer %></td>
	<td><%= rating.score %></td>
	<td><%= link_to rating.user.username, rating.user %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Rating', new_rating_path, class:"btn btn-primary" %>
